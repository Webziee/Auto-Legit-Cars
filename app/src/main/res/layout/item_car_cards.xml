<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/result_card_borders">

        <!-- Horizontal RecyclerView for Car Images -->

        <ImageView
            android:id="@+id/car_image"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_marginBottom="2dp"   
            android:scaleType="centerCrop" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nested_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/car_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="@integer/material_motion_duration_short_1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="1dp"
            android:textColor="#ffff"
            android:layout_marginTop="2dp"
            android:paddingLeft="8dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-5dp"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/car_Condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#FFEB00"
                android:paddingLeft="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFF00"
                android:paddingLeft="8dp"
                android:text="|"/>

            <TextView
                android:id="@+id/car_Mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:paddingLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFF00"
                android:paddingLeft="8dp"
                android:text="|"/>

            <TextView
                android:id="@+id/car_Transmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:paddingLeft="8dp"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/car_dealership"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="1dp"
            android:textColor="#ffff"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/car_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginBottom="15dp"
            android:textColor="#ffff"
            android:paddingLeft="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp">

            <Button
                android:id="@+id/book_test_drive_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/auto_red"
                android:text="@string/booking"
                android:textAllCaps="false"
                android:layout_marginStart="75dp"
                android:textColor="@color/textColor"
                android:textSize="17sp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


















